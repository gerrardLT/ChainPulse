{
  "name": "chainpulse-contracts",
  "version": "1.0.0",
  "description": "ChainPulse Smart Contracts - ERC-4337 Account Abstraction",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:local": "hardhat run scripts/test-local.ts",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "dry-run": "hardhat run scripts/dry-run-deployment.ts --network monad-testnet",
    "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:monad": "hardhat run scripts/deploy-monad.ts --network monad-testnet",
    "deploy:bsc": "hardhat run scripts/deploy.ts --network bsc-testnet",
    "interact:monad": "hardhat run scripts/interact-monad.ts --network monad-testnet",
    "verify:sepolia": "hardhat run scripts/verify.ts --network sepolia",
    "verify:mainnet": "hardhat run scripts/verify.ts --network mainnet",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "solidity",
    "erc-4337",
    "account-abstraction"
  ],
  "author": "ChainPulse Team",
  "license": "MIT",
  "dependencies": {
    "@account-abstraction/contracts": "^0.7.0",
    "@openzeppelin/contracts": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "dotenv": "^17.2.3",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.2",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
